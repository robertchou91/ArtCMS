<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ArtCMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a href="/" class="navbar-brand">ArtCMS</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    @Html.Action("PagesMenuPartial", "Pages")
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item"><a href="/account/logout" class="nav-link">Logout</a></li>
                    }
                    else
                    {
                        if (ViewBag.Title == "Login")
                        {
                            <li class="active nav-item"><a href="/account/login" class="nav-link">Login</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a href="/account/login" class="nav-link">Login</a></li>
                        }

                    }

                    @if (Request.IsAuthenticated)
                    { 
                        <li class="nav-item"><div class="nav-link" id="login-name">@Html.Action("UserNavPartial", "Account", new { area = "" })</div></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right ml-auto">
                    @Html.Action("CartPartial", "Cart")
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="row">
            <div class="col-xs-12 col-md-2">
                @Html.Action("CategoryMenuPartial", "Shop")
            </div>

            @if (ViewBag.Sidebar == "Yes")
            {
                <div class="col-xs-12 col-md-7">
                    @RenderBody()
                </div>
                <div class="col-xs-12 col-md-3">
                    @Html.Action("SidebarPartial", "Pages")
                </div>
            }
            else
            {
                <div class="col-xs-12 col-md-10">
                    @RenderBody()
                </div>
            }

        </div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

        @Scripts.Render("~/bundles/scripts")
        @RenderSection("scripts", required: false)
</body>
</html>
